<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.gaoyuan.management.activity.ChangePasswordActivity">

    <include layout="@layout/layout_title" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/change_pwd_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="原密码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/et_change_oldpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入原密码"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/change_pwd_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="新密码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/et_change_newpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请输入新密码"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/change_pwd_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="确认新密码"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:inputType="textPassword"
                    android:id="@+id/et_change_renewpwd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:background="@null"
                    android:hint="请再次输入新密码"
                    android:textSize="14sp" />

            </LinearLayout>

            <Button
                android:id="@+id/bt_change_certain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/bt_blue_bg"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="44dp"
                android:textSize="16sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
