<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_linLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_50"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:background="@color/blue_bg">

        <LinearLayout
            android:id="@+id/exit_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/back" />

            <View
                android:id="@+id/view_temp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimens_8"
                android:layout_marginLeft="@dimen/dimens_8"
                android:layout_marginTop="@dimen/dimens_8"
                android:layout_toRightOf="@id/iv_back"
                android:background="#14191A"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_13"
            android:layout_toRightOf="@+id/exit_layout"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/center_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_right_text"
            android:layout_width="@dimen/dimens_60"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/dimens_12"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/iv_right2"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dimens_10"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/dimens_50"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/dimens_10"
                android:scaleType="centerInside" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_line" />

</LinearLayout>